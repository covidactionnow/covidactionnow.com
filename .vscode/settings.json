{
  "prettier.documentSelectors": [
    "**/*.astro"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact"
  ],
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tailwindCSS.experimental.classRegex": [
    "cx\\(['\"`]([^`\"']*)['\"`]\\)",
    // astro's `class:list` directive
    // FIXME: not robust but maybe sufficient for now
    "class:list={[^}]*?['\"`]([^`\"']*)['\"`][^}]*?}"
  ],
}